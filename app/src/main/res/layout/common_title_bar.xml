<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/title_bar_color"
    android:layout_height="@dimen/title_bar_height">
    <ImageView
        android:id="@+id/left_img"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/click_drawable_transparent_selector"
        android:paddingLeft="@dimen/title_bar_space"
        android:paddingRight="@dimen/title_bar_space"
        android:paddingBottom="@dimen/title_bar_space_uo_down"
        android:paddingTop="@dimen/title_bar_space_uo_down"
        android:src="@mipmap/ic_back"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/left_btn"
        android:text="完成"
        android:background="@drawable/click_drawable_transparent_selector"
        android:textColor="@color/color_white"
        android:textSize="@dimen/title_textsize"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingLeft="@dimen/title_bar_space"
        android:paddingRight="@dimen/title_bar_space"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/right_img"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_add_device"
        android:background="@drawable/click_drawable_transparent_selector"
        android:paddingLeft="@dimen/title_bar_space"
        android:paddingRight="@dimen/title_bar_space"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/right_btn"
        android:text="完成"
        android:layout_alignParentRight="true"
        android:textColor="@color/color_white"
        android:textSize="@dimen/title_rt_btn_textsize"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingLeft="@dimen/title_bar_space"
        android:paddingRight="@dimen/title_bar_space"
        android:background="@drawable/click_drawable_transparent_selector"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/top_title"
            android:textColor="@color/color_white"
            android:textSize="@dimen/title_textsize"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/top_title_small"
            android:layout_marginTop="2dp"
            android:textColor="@color/color_white"
            android:textSize="10sp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/top_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
</RelativeLayout>